---
import { Image } from 'astro:assets'
import localMvImage from '/src/images/mv2.jpg'
---

<footer class="footer">
  <button class="footer-lead" id="scroll-top">Scroll Top</button>
  <div class="footer-image">
    <Image src={localMvImage} alt="" />
  </div>
</footer>

<style>
  .footer {
    display: grid;
    place-content: center;
    height: var(--footerHeight);
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: -2;
  }
  .footer-lead {
    color: #fff;
    font-size: 14px;
    font-weight: 500;
    line-height: 1;
  }
  .footer-image {
    position: absolute;
    inset: 0;
    z-index: -1;
  }
  img {
    aspect-ratio: 16/9;
    height: 100%;
    object-fit: cover;
    width: 100%;
  }
  button {
    cursor: pointer;
  }
  @media (min-width: 768px) {
  }
</style>

<script>
  const btn = document.getElementById('scroll-top')

  btn.addEventListener('click', () => {
    window.scroll({
      top: 0,
      behavior: 'smooth',
    })
  })
</script>
