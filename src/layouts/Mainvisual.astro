---
import { Image } from 'astro:assets';
import localMvImage from '/src/images/mv2.jpg';
---

<div class="mv">
  <div class="mv-copy">
    <h1 class="mv-ttl">HRK++</h1>
    <p class="mv-lead">日々の学びの記録</p>
  </div>
  <div class="mv-image">
    <Image src={localMvImage} alt=""/>
  </div>
</div>

<style>
  .mv {
    /* background: url(/src/images/noise.png), lightgray 50% / cover no-repeat, #EC503B; */
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: -2;
  }
  .mv-copy {
    color: #fff;
    display: grid;
    gap: 24px;
    padding-inline: var(--paddingInner);
    position: absolute;
    bottom: 80px;
    width: 100%;
  }
  .mv-ttl {
    font-size: 80px;
    line-height: 1;
  }
  .mv-lead {
    font-size: 18px;
    font-weight: 500;
    line-height: 1;
  }
  .mv-image {
    height: var(--mvHeight);
  }
  img {
    aspect-ratio: 16/9;
    height: 100%;
    object-fit: cover;
    width: 100%;
  }
  @media (min-width: 768px) {
    .mv-copy {
      align-items: flex-end;
      grid-template-columns: repeat(2,auto);
      justify-content: space-between;
    }
  }
</style>
