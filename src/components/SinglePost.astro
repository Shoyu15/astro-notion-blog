---
import { Post } from '../lib/interfaces.ts'
import type { Post, SelectProperty } from '../lib/interfaces.ts'
import { filePath } from '../lib/blog-helpers'
import { getPostLink } from '../lib/blog-helpers.ts'
import { getDateStr } from '../lib/blog-helpers.ts'
import { getTagLink } from '../lib/blog-helpers.ts'

export interface Props {
  post: Post
  enableLink: boolean
}

const { post, enableLink = true } = Astro.props

let image = ''
if (post.FeaturedImage && post.FeaturedImage.Url) {
  if (import.meta.env.DEV) {
    image = post.FeaturedImage.Url
  } else {
    image = filePath(new URL(post.FeaturedImage.Url))
  }
}

let title = post.Title
---

<div class="postCard">
  <div class="postCard__thumb">
    {image && <img src={image} alt="Featured image of the post" />}
  </div>
  <div class="postCard__content">
    <ul>
      {
        post.Tags &&
          post.Tags.length > 0 &&
          post.Tags.map((tag: SelectProperty) => {
            if (enableLink) {
              return (
                <li>
                  <a href={getTagLink(tag.name)} class={`tag ${tag.color}`}>
                    #{tag.name}
                  </a>
                </li>
              )
            }
            return <span class={`tag ${tag.color}`}>{tag.name}</span>
          })
      }
    </ul>
    <h2 class="postCard__title">
      {title}
    </h2>
    <p class="postCard__date">
      {post.Date ? getDateStr(post.Date) : ''}
    </p>
  </div>
</div>

<style>
  .postCard {
    display: flex;
    gap: 1.5rem;
  }
  .postCard__thumb {
    border-radius: 8px;
    flex-basis: 30%;
    flex-shrink: 0;
    padding: 0.6rem 0 0.2rem;
  }
  .postCard__thumb img {
    aspect-ratio: 16/9;
    object-fit: cover;
    width: 100%;
  }
  .postCard__thumb img {
    display: block;
    max-width: 100%;
    max-height: 20rem;
  }
  .postCard__content {
    flex: 1;
  }
  ul {
    display: flex;
    flex-wrap: wrap;
    gap: 5px 10px;
    list-style-type: none;
    padding-left: 0;
  }
  ul li {
    font-size: 0.9rem;
    gap: 6px;
    line-height: 1.2rem;
    position: relative;
  }
  ul li a {
    min-width: 0;
    border-radius: 3px;
    padding: 2px 6px;
    line-height: 1.2;
    color: rgb(50, 48, 44);
    background: rgba(227, 226, 224, 0.5);
  }
  .postCard__title {
    font-size: 20px;
    margin-top: 10px;
  }
  .postCard__date {
    margin-top: 10px;
  }
</style>
